@model GiroLouco.Models.InventarioModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Criar Novo Cadastro</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Nome do Cliente</label>
                <select name="IdCliente" class="form-control">
                    @foreach (var item in Model.listaclientes)
                    {
                        <option value="@item.idcliente">@item.nomecliente</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="idmaquina" class="control-label">ID Máquina</label>
                <input asp-for="idmaquina" class="form-control" />
                <span asp-validation-for="idmaquina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="quantidade" class="control-label">Quantidade</label>
                <input type="text" asp-for="quantidade" class="form-control" placeholder="Digite o CPF do Cliente" />
                <span asp-validation-for="quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="text" asp-for="valor" class="form-control" placeholder="Digite o Valor do Item" />
                <span asp-validation-for="valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
